/* Profile Avatar Styles for Header */
.profile-avatar {
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.profile-avatar:hover {
    transform: scale(1.05);
}

/* Avatar size variations */
.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 14px;
    font-weight: 600;
}

.avatar-md {
    width: 48px;
    height: 48px;
    font-size: 18px;
    font-weight: 600;
}

.avatar-lg {
    width: 80px;
    height: 80px;
    font-size: 32px;
    font-weight: 700;
}

