<style>
    .mobile-nav-item {
        transition: all 0.3s ease;
        position: relative;
        color: #6c757d;
    }
    
    .mobile-nav-item:hover {
        transform: translateY(-3px);
        color: #0d6efd !important;
    }
    
    .mobile-nav-item:hover i {
        color: #0d6efd !important;
