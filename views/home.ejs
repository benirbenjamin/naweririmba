                                                    data-song-id="<%= song.id %>"
                                                    data-price="<%= song.price %>"
                                                    data-title="<%= song.title %>"
                                                    data-artist="<%= song.artist_name %>">
                                                <i class="bi bi-cart-plus"></i> Buy
                                            </button>
                                        <% } else { %>
                                            <a href="/login" class="btn btn-primary btn-sm">
                                                <i class="bi bi-cart-plus"></i> Login to Buy
                                            </a>
                                        <% } %>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
