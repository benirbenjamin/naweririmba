</div>

<script>
// Song management functions
async function deactivateSong(songId) {
    if (!confirm('Are you sure you want to deactivate this song? It will be hidden from public view but not deleted.')) {
        return;
    }
    
    try {
        const response = await fetch(`/songs/${songId}/deactivate`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Song deactivated successfully');
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error deactivating song: ' + error.message);
    }
}

async function reactivateSong(songId) {
    try {
        const response = await fetch(`/songs/${songId}/reactivate`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Song reactivated successfully');
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error reactivating song: ' + error.message);
    }
}
</script>
