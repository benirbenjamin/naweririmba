            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-music-note-list text-primary"></i> My Recent Songs
                    </h5>
                    <a href="/users/profile#songs" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    <% if (userSongs && userSongs.length > 0) { %>
                        <div class="row g-3">
                            <% userSongs.forEach(song => { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card song-card-mini h-100">
                                        <div class="position-relative">
                                            <% if (song.cover_image) { %>
                                                <img src="/uploads/covers/<%= song.cover_image %>" 
                                                     class="card-img-top" alt="<%= song.title %>"
                                                     style="height: 120px; object-fit: cover;"
                                                     onerror="this.src='/uploads/covers/default.svg'">
                                            <% } else { %>
                                                <img src="/uploads/covers/default.svg" 
                                                     class="card-img-top" alt="<%= song.title %>"
                                                     style="height: 120px; object-fit: cover;">
                                            <% } %>
                                            <% if (song.is_sold) { %>
                                                <span class="position-absolute top-0 end-0 badge bg-success m-1">SOLD</span>
                                            <% } else if (song.title.startsWith('[INACTIVE]')) { %>
                                                <span class="position-absolute top-0 end-0 badge bg-secondary m-1">INACTIVE</span>
                                            <% } else { %>
                                                <span class="position-absolute top-0 end-0 badge bg-warning m-1">AVAILABLE</span>
                                            <% } %>
                                        </div>
                                        <div class="card-body p-2">
                                            <h6 class="card-title text-truncate mb-1">
                                                <%= song.title.startsWith('[INACTIVE]') ? song.title.replace('[INACTIVE] ', '') : song.title %>
                                            </h6>
                                            <p class="card-text mb-1">
                                                <small class="text-muted">
                                                    <span class="badge bg-primary badge-sm"><%= song.style %></span>
                                                    <span class="badge bg-secondary badge-sm"><%= song.genre %></span>
                                                </small>
                                            </p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <small class="text-success fw-bold price-display" data-price-usd="<%= song.price %>">$<%= parseFloat(song.price).toFixed(2) %></small>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/songs/<%= song.id %>" class="btn btn-outline-primary btn-sm">View</a>
                                                    <% if (!song.is_sold) { %>
                                                        <a href="/songs/<%= song.id %>/edit" class="btn btn-outline-secondary btn-sm" title="Edit Song">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <% if (song.title.startsWith('[INACTIVE]')) { %>
                                                            <button class="btn btn-outline-success btn-sm" 
                                                                    onclick="reactivateSong('<%= song.id %>')" 
                                                                    title="Reactivate Song">
                                                                <i class="bi bi-play-circle"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-outline-warning btn-sm" 
                                                                    onclick="deactivateSong('<%= song.id %>')" 
                                                                    title="Deactivate Song">
                                                                <i class="bi bi-pause-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
