<script>
// Global variables for MOMO payment
let currentTransactionRef = '';
let currentAmountRWF = 0;

// Process MOMO payment
function processMomoPayment() {
    const form = document.getElementById('purchaseForm');
    const formData = new FormData(form);
    
    if (!form.checkValidity()) {
        form.reportValidity();
        return;
    }
    
    const purchaseError = document.getElementById('purchaseError');
    const purchaseSubmitBtn = document.getElementById('purchaseSubmitBtn');
    const purchaseSpinner = document.getElementById('purchaseSpinner');
    
    purchaseError.classList.add('d-none');
    purchaseSpinner.classList.remove('d-none');
    purchaseSubmitBtn.disabled = true;
    
    // Get form data with fallbacks for logged-in users
    const customerEmail = formData.get('customerEmail') || '<%= user ? user.email : "" %>';
    const customerName = formData.get('customerName') || '<%= user ? user.name : "" %>';
    const senderPhone = formData.get('senderPhone');
    const senderName = formData.get('senderName');
    
    console.log('Form data:', { customerEmail, customerName, senderPhone, senderName }); // Debug log
    
    const data = {
        songId: '<%= song.id %>',
        customerEmail: customerEmail,
        customerName: customerName,
        senderPhone: senderPhone,
        senderName: senderName
    };
    
    console.log('Sending MOMO payment data:', data); // Debug log
    
    fetch('/payment/momo/initialize', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify(data)
    })
    .then(response => response.json())
    .then(result => {
        if (result.success) {
            // Store transaction details
            currentTransactionRef = result.transactionRef;
            currentAmountRWF = parseInt(result.rwfAmount.replace(/[^\d]/g, ''));
            
            // Update MOMO instructions modal
            document.getElementById('momoAmount').textContent = result.rwfAmount;
            document.getElementById('momoAmountDisplay').textContent = result.rwfAmount;
            document.getElementById('momoReference').textContent = currentTransactionRef;
            
            // Hide purchase modal and show instructions
            bootstrap.Modal.getInstance(document.getElementById('purchaseModal')).hide();
            new bootstrap.Modal(document.getElementById('momoInstructionsModal')).show();
        } else {
            purchaseError.textContent = result.error || 'Failed to create MOMO transaction.';
            purchaseError.classList.remove('d-none');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        purchaseError.textContent = 'Payment initialization failed. Please try again.';
        purchaseError.classList.remove('d-none');
    })
    .finally(() => {
        purchaseSpinner.classList.add('d-none');
        purchaseSubmitBtn.disabled = false;
    });
}

// Generate WhatsApp message for admin
function generateWhatsAppMessage() {
    const message = `Hello! I have completed a MOMO payment for the song "<%= song.title %>" by <%= song.artist_name %>.

Payment Details:
- Amount: ${currentAmountRWF.toLocaleString()} RWF
- Transaction Reference: ${currentTransactionRef}
- Song: <%= song.title %>
- Artist: <%= song.artist_name %>

Please confirm my payment so I can download the song.

Thank you!`;
    
    return encodeURIComponent(message);
}

// Contact admin via WhatsApp
function contactAdminWhatsApp() {
    const message = generateWhatsAppMessage();
    const whatsappUrl = `https://wa.me/250783987223?text=${message}`;
    window.open(whatsappUrl, '_blank');
}

// Share song function
function shareSong(title, artist) {
    if (navigator.share) {
        navigator.share({
            title: `${title} by ${artist}`,
            text: `Check out this unique song: ${title} by ${artist} on Nawe Ririmba Space`,
            url: window.location.href
        });
    } else {
        // Fallback - copy to clipboard
        const url = window.location.href;
        navigator.clipboard.writeText(url).then(() => {
            alert('Song link copied to clipboard!');
        }).catch(() => {
            prompt('Copy this link to share:', url);
        });
    }
}

// Global function for main audio player
function playPreview(songId, title, artist, previewPath, coverUrl) {
    // Check if we have a local waveform player
    if (window.currentWaveformPlayer) {
        window.currentWaveformPlayer.toggle();
    } else if (typeof audioPlayer !== 'undefined') {
        // Fallback to global audio player (from homepage)
        audioPlayer.loadSong(songId, title, artist, previewPath, coverUrl);
    } else {
        // Last fallback: try to find and play local audio element
        const localAudio = document.getElementById('localAudio');
        if (localAudio) {
            localAudio.play();
        }
    }
}

document.addEventListener('DOMContentLoaded', function() {
    // Initialize WaveSurfer.js player for preview/full track
    // Always initialize the player - it will use the preview route even if preview_path is null
    var audioUrl = '<%= hasPurchased ? `/songs/${song.id}/full-stream` : `/songs/${song.id}/preview` %>';
    var waveformPlayer = initWaveformPlayer(audioUrl, {
        isPreviewMode: <%= hasPurchased ? false : true %>,
        hasPurchased: <%= hasPurchased ? true : false %>,
        previewDuration: 40  // STRICT: 40 seconds max preview
    });
    
    // Store globally for cleanup
    window.currentWaveformPlayer = waveformPlayer;
    
    // Setup purchase form handler
    const purchaseForm = document.getElementById('purchaseForm');
    if (purchaseForm) {
        purchaseForm.addEventListener('submit', function(e) {
            e.preventDefault();
            processMomoPayment();
        });
    }
});
</script>

