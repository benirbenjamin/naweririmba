<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Transaction Management</h2>
                <div class="d-flex align-items-center">
                    <span class="badge bg-info me-3">
                        <i class="bi bi-currency-exchange"></i> 
                        Currency: <span id="currentCurrency">USD</span>
                    </span>
                    <div class="btn-group me-3" role="group" aria-label="Currency">
                        <button type="button" class="btn btn-outline-primary btn-sm currency-option" data-currency="USD">USD</button>
                        <button type="button" class="btn btn-outline-primary btn-sm currency-option" data-currency="RWF">RWF</button>
                    </div>
                    <span class="badge bg-success me-2 price-display" data-price-usd="<%= totalRevenue || 0 %>">
                        Total: $<%= totalRevenue || 0 %>
                    </span>
                    <span class="badge bg-info">
                        <%= transactions.length %> Transactions
                    </span>
                </div>
            </div>

            <!-- Filter and Search -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Status</label>
                            <select name="status" class="form-select">
                                <option value="">All Status</option>
                                <option value="pending" <%= status === 'pending' ? 'selected' : '' %>>Pending</option>
                                <option value="completed" <%= status === 'completed' ? 'selected' : '' %>>Completed</option>
                                <option value="failed" <%= status === 'failed' ? 'selected' : '' %>>Failed</option>
                                <option value="cancelled" <%= status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Payment Method</label>
                            <select name="payment_method" class="form-select">
                                <option value="">All Methods</option>
                                <option value="momo" <%= payment_method === 'momo' ? 'selected' : '' %>>MOMO</option>
                                <option value="flutterwave" <%= payment_method === 'flutterwave' ? 'selected' : '' %>>Flutterwave</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Search</label>
                            <input type="text" name="search" class="form-control" 
                                   placeholder="Song title, buyer email..." value="<%= search || '' %>">
                        </div>
                        <div class="col-md-1">
                            <label class="form-label">&nbsp;</label>
                            <button type="submit" class="btn btn-primary d-block w-100">Filter</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Transactions Table -->
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Song</th>
                                    <th>Buyer</th>
                                    <th>Amount (USD)</th>
                                    <th>Status</th>
                                    <th>Payment Method</th>
                                    <th>Date</th>
                                    <th>Downloads</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (transactions && transactions.length > 0) { %>
                                    <% transactions.forEach(transaction => { %>
                                        <tr>
                                            <td>#<%= transaction.id %></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <% if (transaction.cover_image) { %>
                                                        <img src="/uploads/covers/<%= transaction.cover_image %>" 
                                                             class="rounded me-2" width="40" height="40">
                                                    <% } %>
                                                    <div>
                                                        <strong><%= transaction.song_title %></strong><br>
                                                        <small class="text-muted">by <%= transaction.artist_name %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong><%= transaction.buyer_name %></strong><br>
                                                    <small class="text-muted"><%= transaction.buyer_email %></small>
                                                </div>
                                            </td>
                                            <td>
                                                <strong class="price-display" data-price-usd="<%= transaction.amount %>">
                                                    $<%= parseFloat(transaction.amount).toFixed(2) %>
                                                </strong>
                                            </td>
                                            <td>
                                                <% if (transaction.status === 'completed') { %>
                                                    <span class="badge bg-success">Completed</span>
                                                <% } else if (transaction.status === 'pending') { %>
                                                    <span class="badge bg-warning">Pending</span>
                                                <% } else if (transaction.status === 'failed') { %>
                                                    <span class="badge bg-danger">Failed</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary"><%= transaction.status %></span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (transaction.payment_data && JSON.parse(transaction.payment_data).payment_method === 'momo') { %>
                                                    <span class="badge bg-primary">MOMO</span><br>
                                                    <small>MTN 672747</small>
                                                <% } else { %>
                                                    <span class="badge bg-info">Flutterwave</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <small><%= new Date(transaction.created_at).toLocaleDateString() %><br>
                                                <%= new Date(transaction.created_at).toLocaleTimeString() %></small>
                                            </td>
                                            <td>
                                                <small>
                                                    Song: <%= transaction.download_count || 0 %><br>
                                                    Lyrics: <%= transaction.lyrics_download_count || 0 %>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <% if (transaction.flutterwave_tx_ref) { %>
                                                        <button class="btn btn-outline-info btn-sm" 
                                                                onclick="viewTransactionDetails('<%= transaction.id %>')">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                    <% } %>
                                                    <% if (transaction.status === 'pending') { %>
                                                        <% if (transaction.payment_data && JSON.parse(transaction.payment_data).payment_method === 'momo') { %>
                                                            <button class="btn btn-success btn-sm" 
                                                                    onclick="confirmMomoPayment('<%= transaction.payment_reference %>')">
                                                                <i class="bi bi-check-circle"></i> Confirm MOMO
                                                            </button>
                                                        <% } else { %>
                                                            <button class="btn btn-outline-warning btn-sm" 
                                                                    onclick="updateTransactionStatus('<%= transaction.id %>', 'completed')">
                                                                <i class="bi bi-check"></i>
                                                            </button>
                                                        <% } %>
                                                    <% } %>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="bi bi-receipt fs-1 d-block mb-2"></i>
                                                No transactions found
                                            </div>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <% if (totalPages > 1) { %>
                        <nav class="mt-4">
                            <ul class="pagination justify-content-center">
                                <% if (currentPage > 1) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>&status=<%= status || '' %>&search=<%= search || '' %>&payment_method=<%= payment_method || '' %>">Previous</a>
                                    </li>
                                <% } %>
                                
                                <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>&status=<%= status || '' %>&search=<%= search || '' %>&payment_method=<%= payment_method || '' %>"><%= i %></a>
                                    </li>
                                <% } %>
                                
                                <% if (currentPage < totalPages) { %>
                                    <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>&status=<%= status || '' %>&search=<%= search || '' %>&payment_method=<%= payment_method || '' %>">Next</a>
                                    </li>
                                <% } %>
                            </ul>
                        </nav>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Transaction Details Modal -->
<div class="modal fade" id="transactionModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Transaction Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="transactionDetails">
                <!-- Transaction details will be loaded here -->
            </div>
        </div>
    </div>
</div>

<script>
function viewTransactionDetails(transactionId) {
    fetch(`/admin/transactions/${transactionId}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const transaction = data.transaction;
                let paymentInfo = '';
                
                // Check if this is a MOMO payment
                if (transaction.payment_data) {
                    try {
                        const paymentData = JSON.parse(transaction.payment_data);
                        if (paymentData.payment_method === 'momo') {
                            paymentInfo = `
                                <hr>
                                <div class="row">
                                    <div class="col-12">
                                        <h6>MOMO Payment Details</h6>
                                        <p><strong>Payment Method:</strong> MTN Mobile Money</p>
                                        <p><strong>Sender Phone:</strong> ${paymentData.sender_phone || 'N/A'}</p>
                                        <p><strong>Sender Name:</strong> ${paymentData.sender_name || 'N/A'}</p>
                                        <p><strong>Recipient Code:</strong> ${paymentData.recipient_code || '672747'}</p>
                                        <p><strong>Recipient Name:</strong> ${paymentData.recipient_name || 'Benjamin'}</p>
                                        <p><strong>Amount (RWF):</strong> ${paymentData.rwf_amount ? paymentData.rwf_amount.toLocaleString() + ' RWF' : 'N/A'}</p>
                                        ${transaction.status === 'pending' ? `
                                            <button class="btn btn-success btn-sm mt-2" onclick="confirmMomoPayment('${transaction.payment_reference}')">
                                                <i class="bi bi-check-circle"></i> Confirm MOMO Payment
                                            </button>
                                        ` : ''}
                                    </div>
                                </div>
                            `;
                        }
                    } catch (e) {
                        console.error('Error parsing payment data:', e);
                    }
                }
                
                document.getElementById('transactionDetails').innerHTML = `
                    <div class="row">
                        <div class="col-md-6">
                            <h6>Transaction Info</h6>
                            <p><strong>ID:</strong> #${transaction.id}</p>
                            <p><strong>Reference:</strong> ${transaction.payment_reference || 'N/A'}</p>
                            <p><strong>Status:</strong> ${transaction.status}</p>
                            <p><strong>Amount:</strong> $${transaction.amount}</p>
                            <p><strong>Date:</strong> ${new Date(transaction.created_at).toLocaleString()}</p>
                        </div>
                        <div class="col-md-6">
                            <h6>Buyer Info</h6>
                            <p><strong>Name:</strong> ${transaction.buyer_name || transaction.customer_name || 'N/A'}</p>
                            <p><strong>Email:</strong> ${transaction.buyer_email || transaction.customer_email || 'N/A'}</p>
                            <p><strong>Phone:</strong> ${transaction.customer_phone || 'N/A'}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <h6>Song Info</h6>
                            <p><strong>Title:</strong> ${transaction.song_title}</p>
                            <p><strong>Artist:</strong> ${transaction.artist_name}</p>
                            <p><strong>Downloads:</strong> Song: ${transaction.download_count || 0}, Lyrics: ${transaction.lyrics_download_count || 0}</p>
                        </div>
                    </div>
                    ${paymentInfo}
                `;
                new bootstrap.Modal(document.getElementById('transactionModal')).show();
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to load transaction details');
        });
}

function updateTransactionStatus(transactionId, newStatus) {
    if (confirm(`Are you sure you want to mark this transaction as ${newStatus}?`)) {
        fetch(`/admin/transactions/${transactionId}/status`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status: newStatus })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Failed to update transaction status');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to update transaction status');
        });
    }
}

function confirmMomoPayment(txRef) {
    if (confirm('Confirm that you have received the MOMO payment and want to complete this transaction?')) {
        const loadingBtn = event.target;
        const originalText = loadingBtn.innerHTML;
        loadingBtn.innerHTML = '<i class="bi bi-clock"></i> Processing...';
        loadingBtn.disabled = true;
        
        fetch(`/payment/momo/confirm/${txRef}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('MOMO payment confirmed successfully!');
                location.reload();
            } else {
                alert('Failed to confirm MOMO payment: ' + (data.error || 'Unknown error'));
                loadingBtn.innerHTML = originalText;
                loadingBtn.disabled = false;
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Failed to confirm MOMO payment');
            loadingBtn.innerHTML = originalText;
            loadingBtn.disabled = false;
        });
    }
}
</script>
</div>
